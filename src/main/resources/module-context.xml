<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd">

	<description>NFE job to get you started. 
		It provides a skeleton for a typical batch application.
	</description>
	
 	<bean id="jobLauncher" class="org.springframework.batch.core.launch.support.SimpleJobLauncher"
		p:jobRepository-ref="jobRepository" 
		p:taskExecutor-ref="taskExecutor">
	</bean>
	
	<!-- 4.3. Configuring a JobLauncher asynchronously -->
	<bean id="taskExecutor" class="org.springframework.core.task.SimpleAsyncTaskExecutor" />
	
	<!-- http://forum.springsource.org/showthread.php?59779-Spring-Batch-1-1-2-Standard-JPA-does-not-support-custom-isolation-levels-use-a-sp -->
	<batch:job-repository id="jobRepository" data-source="dataSource" isolation-level-for-create="DEFAULT"
	    transaction-manager="transactionManager">
	</batch:job-repository>
 	
	<batch:job id="J000" >
		<batch:split id="parallelProcessing" task-executor="taskExecutor">
			<batch:flow>
				<batch:step id="S3001" >
					<batch:tasklet ref="applicationRecieveGoodRightTask" />
				</batch:step>
			</batch:flow>
			<batch:flow>
				<batch:step id="S3002" >
					<batch:tasklet ref="applicationReceiveTask" />
				</batch:step>
			</batch:flow>
			<batch:flow>
				<batch:step id="S3003" >
					<batch:tasklet ref="approveReportTask" />
				</batch:step>
			</batch:flow>
		</batch:split>
		<!-- <batch:step id="S3001">
			<batch:tasklet ref="applicationRecieveGoodRightTask" />
		</batch:step> -->
	</batch:job>
	    
 	<bean id="applicationRecieveGoodRightTask" 
 		class="co.th.ktc.nfe.batch.task.ApplicationRecieveGoodRightTask" />
 		
 	<bean id="applicationReceiveTask" 
 		class="co.th.ktc.nfe.batch.task.ApplicationReceiveTask" />
	    
 	<bean id="approveReportTask" 
 		class="co.th.ktc.nfe.batch.task.ApproveReportTask" />
	
</beans>
